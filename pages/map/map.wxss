.map_container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 0;
}

.map {
  width: 100%;
  height: 100%;
}

.map_text {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 120px;
  padding: 0 15px;
  z-index: 1;
  background-color: #fff;
}

text {
  margin: 5px 0;
  display: block;
  font-size: 12px;
}

.h1 {
  margin: 15px 0;
  font-size: 15px;
}

.user_content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120px;
}

.user_content > .user_location{
  position: absolute;
  width: 40px;
  height: 40px;
  left: 20px;
}

.user_content > .user_info{
  position: absolute;
  width: 40px;
  height: 40px;
  right: 20px;
}

.user_content > .sbtn{
  position: absolute;
  background-color: #000;
  color: #fff;
  height: 60px;
  bottom: 0;
  left: 0;
  right: 0;
  font-weight: 900;
  font-size: 22px;
}
