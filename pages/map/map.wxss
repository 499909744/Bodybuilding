.map_container {
  position: absolute;
  top: 260rpx;
  bottom: 0;
  left: 0;
  right: 0;
}
.map {
  width: 100%;
  height: 100%;
}
.map_text {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 260rpx;
  padding: 0 15rpx;
  background-color: #fff;
}

text {
  margin: 5rpx 0;
  display: block;
  font-size: 25rpx;
}

.h1 {
  margin: 35rpx 0;
  font-size: 35rpx;
}
.buttom__btn{
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  background: #000;
  text-align: center;
}
.buttom__btn > text{
  color: white;
  font-size: 50rpx;
  line-height: 1.8em;
}