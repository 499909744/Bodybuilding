/* pages/user/user.wxss */
.userinfoImg {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 1px solid #dedede;
}
.userinfoImg .userinfo-nickname {
  margin-top: 10rpx;
}
.userinfoImg .userinfo-nickname:nth-of-type(1) {
  font-weight: bold;
}
.usermotto {
  margin-top: 200px;
}
.userinfo{
  width: 100%;
  margin-top: 80rpx;
  text-align: left;
}
.userinfo>view{
 padding: 20rpx 40rpx;
 border-top: 1px solid #dedede;
}
.userinfo>view:last-child{
 border-bottom: 1px solid #dedede;
}
.authentication{
  float: right;
  margin-right: 10rpx;
  color: #aaa;
}
.triangle-facing-right {
  display: inline-block;
  float: right;
  border-right: 1.5px solid;
  border-bottom: 1.5px solid;
  width: 20rpx;
  height: 20rpx;
  color: #bbb;
  transform: rotate(-45deg);
  margin-top: .36rem;
}