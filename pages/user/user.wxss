/* pages/user/user.wxss */

.userinfoImg {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 1px solid #dedede;
}

.userinfoImg .userinfo-nickname {
  margin-top: 10rpx;
}

.userinfoImg .userinfo-nickname:nth-of-type(2) {
  font-weight: bold;
}

.usermotto {
  margin-top: 200px;
}

.userinfo {
  width: 100%;
  margin-top: 80rpx;
  text-align: left;
}

.userinfo>view {
  position: relative;
}

.userinfo image {
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
  margin-bottom: 10rpx;
  margin-right: 20rpx;
}

.userinfo>view {
  padding: 30rpx 40rpx 20rpx 30rpx;
  border-top: 1px solid #dedede;
}

.userinfo>view:last-child {
  border-bottom: 1px solid #dedede;
}

.authentication {
  float: right;
  margin-right: 10rpx;
  color: #aaa;
}

.colorRed {
  color: #f00;
}

.triangle-facing-right {
  display: inline-block;
  float: right;
  border-right: 1.5px solid;
  border-bottom: 1.5px solid;
  width: 20rpx;
  height: 20rpx;
  color: #bbb;
  transform: rotate(-45deg);
  margin-top: 0.36rem;
}

.btn_share {
  border: none;
  text-align: left;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  position: absolute;
  font-size: 16px;
  line-height: 1;
  padding: 30rpx 40rpx 20rpx 30rpx;
  background-color: #f9f9f9 !important;
}

.btn_share::after {
  border: none;
}

.vipImg {
  height: 60rpx;
  line-height: 60rpx;
}

.vipImg image {
  width: 40rpx;
  height: 40rpx;
  display: block;
  float: left;
  margin:10rpx 10rpx 0 0;
}
